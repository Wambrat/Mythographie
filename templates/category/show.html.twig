{% extends 'base.html.twig' %}

{% block title %}Type de Personnage{% endblock %}

{% block body %}
{{ parent() }}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('mythology') }}">Mythologies</a></li>
        <li class="breadcrumb-item"><a href="{{ path("categories", { slug : characters[0].mythology.slug }) }}">Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ characters[0].category.slug }}</li>
      </ol>
    </nav>
    <h1> Quel personnage veut tu voir les mythes?</h1>
    <div class="row">
    {% for character in characters %}
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <img src="{{ character.picture }}" alt="{{ character.name }}"/>
                    <p>{{ character.name }}</p>
                    <p>{{ character.description }}</p>
                    <a href="{{  path('character', {slugMythology: character.mythology.slug, slugCategory : character.category.slug, character: character.slug}) }}">Voir les Myths</a>
                    {# Lien vers la fiche de la série : { slug: program.slug })#}
                </div>
                <div class="card-footer">
                </div>
            </div>
        </div>    
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </div>
{% endblock %}
